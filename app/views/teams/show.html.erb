<h1><%= @team.name %></h1>

<h3>Players</h3>
<ul>
  <% @team.players.each do |p| %>
    <li><%= p.name %></li>
  <% end %>
</ul>
<div class="controls">
  <%= link_to "Edit Team", edit_team_path(@team.id) %> |
  <%= link_to 'Delete Teams', @team, :method => 'delete' %> | 
  <%= link_to 'Back to Teams', teams_path %>
</div>
