<div class="col-xs-4 col-xs-offset-4 user-form">
  <h2>Sign In</h2>

  <%= form_tag login_path do %>
    <div class="form-group">
      <%= email_field_tag :email, nil, :placeholder => 'email address', :class => 'form-control' %>
      <%= password_field_tag :password, '', :placeholder => 'password', :class => 'form-control' %>
      <%= submit_tag 'Log in', :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <p>Don't have an account? <%= link_to 'Create Account', new_player_path %></p>
</div>
