<div class="col-lg-4 col-md-4 col-xs-12 user-form">
  <h2>Sign Up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.text_field :first_name, class: "form-control", placeholder: "Louis" %>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Mwakafunga" %>
    <%= f.date_field :date_of_birth, class: "form-control" %>
    <%= f.email_field :email, class: "form-control", placeholder: "email" %>
    <%= f.password_field :password, placeholder: "password", class: "form-control" %>
    <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "form-control" %>

    <%= f.submit "Sign up!", class: "btn btn-primary" %>
  <% end %>
    <p> Already have an account?
    <%= render "devise/shared/links" %>
</div>

