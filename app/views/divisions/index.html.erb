<div class="divisions">
  <% @divisions.each do | d | %>
    <h1>Division <%= d.division_number %></h1>
    <div  class="tbl-header">
      <table class="test-table">
        <th>Team</th>
        <th>Pl</th>
        <th>GF</th>
        <th>GA</th>
        <th>GD</th>
        <th>Pts</th>
      </table>
    </div>
    <div  class="tbl-content">
      <% teams = d.teams.order('points DESC') %>
      <table class="test-table" cellpadding="0" cellspacing="0" border="0">
        <% teams.each do | team | %>
          <% if team.division.division_number == d.division_number %>
              <tr>
                <th><%= team.name %></th>
                <td><%= team.games.count %></td>
                <td><%= team.goals_for %></td>
                <td><%= team.goals_against %></td>
                <td><%= team.goals_for - team.goals_against unless team.goals_for.nil? && team.goals_against.nil? %></td>
                <td><%= team.points %></td>
              </tr>
        <% end %>
      <% end %>
      </table>
    </div>
  <% end %>
</div>
