<!DOCTYPE html>
<html>
<head>
  <title>FutsalHomebushLeague</title>


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= cloudinary_js_config %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="page-header">
    <div class="container">
      <nav>
        <ul>
          <div class="menu-nav">
            <li class="active link-1"><%= link_to 'Home', root_path %></li>
            <li class="link-1"><%= link_to 'Teams', teams_path %></li>
            <li class="link-1"><%= link_to 'Results', games_results_path %></li>
            <li class="link-1"><%= link_to 'Fixtures', games_fixtures_path %></li>
            <li class="link-1"><%= link_to 'Divisions', divisions_path %></li>
          </div>
          <div class="menu-user-nav">
            <% unless @current_player %>
              <li><%= link_to 'Sign Up', new_player_path %></li> |
              <li><%= link_to 'Login', login_path %></li>
            <% else %>
              <li>
                <%= link_to "Logout #{@current_player.name.split(' ')[0] if @current_player.name.present? }", login_path, :method => 'delete' %>
              </li>

              <li>
                <%= link_to(raw('<span class="glyphicon glyphicon-user"></span>'), player_path(@current_player.id)) %>
              </li>
            <% end %>
          </div>
        </ul>
      </nav>
    </div>
  </div>
</header>
<div class="container">
    <div id="banner">
      <%= image_tag('/assets/futsal-banner.png') %>
    </div>
  <%= yield %>
</div>


</body>
</html>
