<h1> All Players </h1>
<table class="table table-hover table-inverse">
  <tr>
    <th>Players</th>
    <th>Teams</th>
  </tr>
  <% @players.each do |player| %>
    <tr>
      <td class="player"><%= player.name %></td>
      <td class="team"><%= player.team.name %></td>
    </tr>

  <% end %>
</table>
