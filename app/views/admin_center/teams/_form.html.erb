<%= form_for @team, url: admin_center_teams_path do |f| %>
    <div class="form-group">
      <label class="small mb-1" for="name">Name</label>
      <%= f.text_field :name, class: "form-control py-4",  placeholder: "Enter team name" %>
    </div>
    <div class="form-group">
      <label class="small mb-1" for="division">Division</label>
      <%= f.select :division_id, Division.pluck(:name, :id), class: "form-control py-4" %>
    </div>
    <%= f.submit %>
<% end %>